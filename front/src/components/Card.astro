---
import 'aos/dist/aos.css'; 
---
<body>
<div data-aos="flip-left"  class="flip-card lg:flip-card-lg">
    <div data-aos="flip-left"  class="flip-card-inner">
        <div   class="flip-card-front bg-white text-black">
            <slot data-aos="fade-right" name="front"></slot>
        </div>
        <div class="flip-card-back bg-white text-white rotate">
            <slot name="back"></slot>
        </div>
    </div>
</div>
<script>
	import AOS from 'aos';
	AOS.init();
  </script>
<body/>

<style>
    .flip-card {
        background-color: transparent;
        width: 295px;
        height: 280px;
        perspective: 1000px;
        margin: 20px;
    }

    .flip-card-inner {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front,
    .flip-card-back {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center; /* Centra verticalmente */
        justify-content: center; /* Centra horizontalmente */
    }

    .flip-card-front {
        background-color: #ffffff;
        color: rgb(0, 0, 0);
        z-index: 1;
    }

    .flip-card-back {
        background: linear-gradient(0deg, #225b73 0%, #59fef0 180%);
        color: white;
        transform: rotateY(180deg);
        z-index: 0;
    }


    @keyframes color {
        0% {
            filter: hue-rotate(0deg);
        }
        50% {
            filter: hue-rotate(45deg);
        }
        100% {
            filter: hue-rotate(0deg);
        }
    }


</style>

