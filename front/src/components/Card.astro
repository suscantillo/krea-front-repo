---
import 'aos/dist/aos.css'; 
---
<body>
<div data-aos="flip-left" data-aos-delay="500" class="flip-card lg:flip-card-lg">
    <div data-aos="flip-left" data-aos-delay="500" class="flip-card-inner">
        <div   class="flip-card-front bg-white text-black">
            <slot data-aos="fade-right" name="front"></slot>
        </div>
        <div class="flip-card-back bg-white text-white rotate">
            <slot name="back"></slot>
        </div>
    </div>
</div>
<script>
	import AOS from 'aos';
	AOS.init();
  </script>
<body/>

<style>
    .flip-card {
        background-color: transparent;
        width: 370px;
        height: 390px;
        perspective: 1000px;
        margin: 20px;
    }

    .flip-card-inner {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front,
    .flip-card-back {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        align-items: center; /* Centra verticalmente */
        justify-content: center; /* Centra horizontalmente */
    }

    .flip-card-front {
        background-color: #ffffff;
        color: rgb(0, 0, 0);
        z-index: 1;
    }

    .flip-card-back {
        background-color: #ffffff;
        color: white;
        transform: rotateY(180deg);
        z-index: 0;
    }

    /* Media query para tarjetas grandes en pantallas grandes */
    @media (min-width: 1024px) {
        .lg\:flip-card-lg {
            width: 450px;
            height: 480px;
        }
    }
</style>

