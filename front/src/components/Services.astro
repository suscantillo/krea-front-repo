        <div class="container">
            <div class="column divider-column sup">
                <div class="divider"></div>
            </div>
            <div class="column title-column">
                <h1>Portafolio de servicios</h1>
            </div>
            <div class="column divider-column inf">
                <div class="divider"></div>
            </div>
        </div>
    </section>

    <main class='main'>
        <div class="cards-container">
           <!-- card title  -->
           <div class="heading-card ">
