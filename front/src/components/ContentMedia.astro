---
const { imgSrc, reverseImg = false } = Astro.props;
---

<section class="my-64">
  <link rel="stylesheet" href="./Styles/GlobalCss.css"> 
  <div class="container">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 items-center"> 
      {!reverseImg ? 
        <div class="img-container">
          <img class="rounded-lg my-64 float-img" src={imgSrc} alt="Descripción de la imagen" />
        </div> 
      : ''}
      <div class="space-content flex flex-col justify-center p-4">
        <slot />
      </div>
      {reverseImg ? 
        <div class="img-container">
          <img class="rounded-lg my-64 float-img" src={imgSrc} alt="Descripción de la imagen" />
        </div> 
      : ''}
    </div>
  </div>
</section>

<style>
  section {
    margin-bottom: 0px;
    font-size: 20px;
  }
  .space-content {
    list-style-type: none;  
    font-family: 'Raleway', sans-serif; 
    font-size: 30px; 
    font-weight: 500; 
    color: #333; 
    padding: 10px;
  }

  .img-container {
    display: flex;
    justify-content: center; 
    align-items: center; 
    overflow: hidden; /* Evita que la imagen salga del contenedor en animaciones */
  }

  img {
    margin: 0;
    padding: 0;
    max-width: 100%; 
    height: auto; 
    animation: floatAnimation 3s ease-in-out infinite alternate; /* Animación continua */
  }

  @keyframes floatAnimation {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px); /* Movimiento hacia arriba */
    }
    100% {
      transform: translateY(0);
    }
  }

  .grid {
    align-items: center; 
  }
</style>
