    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Raleway', sans-serif;
        }

        .container-contact {
            width: 100%;
            display: flex;
            padding: 80px;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
            margin-top: 70px;
        }

        .contact-in {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: stretch;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
            border-radius: 20px;
            background-color: white;
        }

        .contact-form {
            width: 100%;
            flex: 1;
            padding: 30px;
            box-sizing: border-box;
        }

        .contact-form h1 {
            font-size: 2em;
            font-weight: 700;
            text-align: center;
            margin: 10px;
            color: #225b73;
        }

        .contact-form label {
            font-size: 1.2em;
            font-weight: 500;
            margin-bottom: 10px;
            display: block;
            color: #225b73;
        }

        .contact-form-txt {
            width: 100%;
            height: 40px;
            border: 1px solid #41bbb1;
            border-radius: 10px;
            outline: none;
            margin-bottom: 20px;
            padding: 15px;
            box-sizing: border-box;
            cursor: text;
        }

        .contact-form-txt::placeholder {
            color: #aaa;
        }

        .contact-form-textarea {
            width: 100%;
            height: 130px;
            border-radius: 10px;
            outline: none;
            border: 1px solid #41bbb1;
            margin-bottom: 20px;
            padding: 15px;
            box-sizing: border-box;
            cursor: text;
            resize: none;
        }

        .contact-form-textarea::placeholder {
            color: #aaa;
        }

        .contact-form-btn {
            width: 100%;
            border: none;
            border-radius: 10px;
            outline: none;
            background-color: #41bbb1;
            color: white;
            margin-bottom: 20px;
            padding: 10px 0;
            font-size: 18px;
            cursor: pointer;
        }

        .contact-form-btn:hover {
            background-color: #369b96;
        }

        .contact-map {
            width: 100%;
            flex: 1;
            box-sizing: border-box;
            padding: 40px 30px 50px 0px;
        }

        .contact-map iframe {
            width: 100%;
            height: 100%;
            border: 0;
            border-radius: 20px;
        }

        /* Media Queries para hacer el diseño responsive */
        @media (max-width: 1200px) {
            .container-contact {
                padding: 20px;
            }

            .contact-in {
                flex-direction: column;
                align-items: center;
            }

            .contact-map {
                height: 400px;
                padding: 20px;
            }

            .contact-map iframe {
                height: 400px;
            }
        }

        @media (max-width: 768px) {

            .contact-in {
                flex-direction: column;
                height: auto;
            }

            .contact-form, .contact-map {
                width: 100%;
                flex: none;
                padding: 20px;
            }

            .contact-map {
                height: 400px;
            }

            .contact-map iframe {
                height: 100%;
            }
        }

        .tratamiento-datos{
            margin-bottom: 20px;
        }

        .tratamiento-datos a {
            color: #41bbb1;
            font-weight: 700;
            cursor: pointer;
        }



    </style>

