---
import Bar from '../components/Bar.astro';
import NavBar from '../components/NavBar.astro';
import Hero from '../components/Hero.astro';
import Main from '../components/Main.astro';
import Separator from '../components/Separator.astro';
import Card from    '../components/Card.astro'
import CardsContainer from '../components/CardsContainer.astro'
---

<NavBar />
<Hero />
<Main />
<Separator/>

<div class="flex flex-col items-center my-8 ">
    <h1 class="text-center mb-4 text-5xl font-bold custom-text-color custom-font">Las cifras ratifican nuestro éxito</h1>
    <CardsContainer>
      <Card>
        <div slot="front">
        <h1 class="text-center mb-4 text-8xl font-bold custom-text-color custom-font-card ">3000</h1>
        <h2 class="text-center mb-4 text-5xl font-bold  custom-font-subcard">Empresas atendidas</h2>
       </div>
      </Card>
      <Card>
        <div slot="front">
            <h1  class="text-center mb-4 text-8xl font-bold custom-text-color custom-font-card">90%</h1>    
            <h2 class="text-center mb-4 text-5xl font-bold  custom-font-subcard">Ejecución</h2>
        </div>
        <h1 slot="back">Prueba</h1>
      </Card>
      <Card>
        <div slot="front">
            <h1 class="text-center mb-4 text-8xl font-bold custom-text-color custom-font-card">+40</h1>
            <h2 class="text-center mb-4 text-5xl font-bold  custom-font-subcard">Mil millones aprobados</h2>
        </div>
        <h1 slot="back">Prueba</h1>
      </Card>
    </CardsContainer>
  </div>

  <style>
    .custom-text-color {
      color: var(--main-color);
      font-weight: 900;
      margin: 50px;
    }
    .custom-font {
      font-family: var(--font-family);
    }

    .custom-font-card{
        color: var(--second-color);
    }

    .custom-font-subcard{
        color: var(--main-color);
        font-weight: 500;
    }
  </style>
